<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inextends.myratedlibrary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BookList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BookEditorActivity" />

        <provider
            android:name=".data.BookProvider"
            android:authorities="com.inextends.myratedlibrary"
            android:exported="false" />

        <activity android:name=".BookDetailsActivity"></activity>
    </application>

</manifest>